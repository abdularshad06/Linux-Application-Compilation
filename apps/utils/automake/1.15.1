mkdir /opt/apps/utils/automake/1.15.1/

cd /opt/apps/utils/automake/1.15.1/

wget https://ftp.gnu.org/gnu/automake/automake-1.15.1.tar.gz

tar xvf automake-1.15.1.tar.gz

cd automake-1.15.1

